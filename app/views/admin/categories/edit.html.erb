<div class="col-sm-12">
  <ul class="breadcrumb">
    <li><%= link_to t("admin.manage"), admin_root_path %></li>
    <li><%= t "catrgories" %></li>
  </ul>
</div>
<%= render "admin/layouts/left_bar" %>
<div class="col-sm-9">
  <div class="row box">
    <div class="col-md-6 col-md-offset-3">
    <h1><%= t "edit_category" %></h1>
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :question_number %>
        <%= f.number_field :question_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit t("save_changes"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
