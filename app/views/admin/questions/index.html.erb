<div class="col-sm-12">
  <ul class="breadcrumb">
    <li><%= link_to t("admin.manage"), admin_root_path %></li>
    <li><%= t "list_question" %></li>
  </ul>
</div>
<%= render "admin/layouts/left_bar" %>
<div class="col-sm-9">
  <div class="row box">
    <div class="col-sm-12">
      <h3 class="col-sm-6"><%= t "categories" %></h3>
      <div class="col-sm-6">
        <div class="input-group-btn search-panel">
          <%= form_tag admin_questions_path, method: "GET", id: "category_search" do %>
            <%= hidden_field_tag :search, params[:search], id: "search" %>
            <%= select_tag "category_id", options_for_select(@categories.collect{
              |category| [category.title.truncate(Settings.filter_category),
              category.id]}), include_blank: t("all"), class: "btn btn-default filter-categories" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="table-bordered">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t "questions" %></th>
              <th colspan="3"><%= t "question_name" %></th>
            </tr>
          </thead>
          <tbody id="result_search">
            <%= render "question" %>
          </tbody>
        </table>
      </div>
      <div class="pull-right">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
